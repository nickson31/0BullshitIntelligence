# 0BullshitIntelligence Microservice Configuration
# Copy this file to .env and fill in your actual values

# ==========================================
# APPLICATION SETTINGS
# ==========================================
ENVIRONMENT=development
DEBUG=true
HOST=0.0.0.0
PORT=8000

# ==========================================
# DATABASE CONFIGURATION (Primary)
# ==========================================
# Your new Supabase project for this microservice
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-anon-key-here
SUPABASE_SERVICE_KEY=your-service-role-key-here

# ==========================================
# SYNC DATABASE CONFIGURATION (Optional)
# ==========================================
# Main repository Supabase instance for synchronization
SYNC_SUPABASE_URL=https://main-project.supabase.co
SYNC_SUPABASE_KEY=main-anon-key-here

# ==========================================
# AI CONFIGURATION
# ==========================================
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-2.0-flash

# ==========================================
# AUTHENTICATION & SECURITY
# ==========================================
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
SERVICE_API_KEY=your-service-to-service-api-key

# ==========================================
# FEATURE FLAGS
# ==========================================
# Enable/disable features
TESTING_INTERFACE_ENABLED=true
METRICS_ENABLED=true
SYNC_ENABLED=true

# ==========================================
# AI SYSTEM CONFIGURATION
# ==========================================
# Language detection
DEFAULT_LANGUAGE=spanish
SUPPORTED_LANGUAGES=spanish,english

# Anti-spam system
SPAM_THRESHOLD=70

# Upselling system
UPSELL_MAX_ATTEMPTS_PER_DAY=3
UPSELL_COOLDOWN_HOURS=4

# ==========================================
# SEARCH ENGINE CONFIGURATION
# ==========================================
# Investor search
MIN_ANGEL_SCORE=40.0
MIN_EMPLOYEE_SCORE=5.9
DEFAULT_SEARCH_LIMIT=15
MAX_SEARCH_LIMIT=50

# Company search
COMPANY_SEARCH_LIMIT=10
MAX_COMPANY_SEARCH_LIMIT=30

# ==========================================
# PERFORMANCE CONFIGURATION
# ==========================================
# Rate limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Caching
CACHE_TTL_DEFAULT=3600
CACHE_TTL_SEARCH_RESULTS=1800
CACHE_TTL_USER_CONTEXT=600

# Background tasks
LIBRARIAN_QUEUE_SIZE=1000
LIBRARIAN_BATCH_SIZE=10
LIBRARIAN_PROCESS_INTERVAL=5

# ==========================================
# WEBSOCKET CONFIGURATION
# ==========================================
WEBSOCKET_HEARTBEAT_INTERVAL=30
WEBSOCKET_MAX_CONNECTIONS_PER_USER=5
WEBSOCKET_MESSAGE_QUEUE_SIZE=100

# ==========================================
# LOGGING CONFIGURATION
# ==========================================
LOG_LEVEL=INFO
LOG_FILE=app.log

# ==========================================
# TESTING CONFIGURATION
# ==========================================
TESTING_AUTH_REQUIRED=false
TESTING_MAX_CONCURRENT_SESSIONS=50

# ==========================================
# MONITORING CONFIGURATION
# ==========================================
ANALYTICS_BATCH_SIZE=100
ANALYTICS_FLUSH_INTERVAL=300